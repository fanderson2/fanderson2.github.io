<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Metronome</title>
    <script type="text/javascript" src="https://cycling74.s3.amazonaws.com/download/xebra.js"></script>

    <script type="text/javascript">
        var options = {
            hostname : "https://clickbutler.co.uk", // localhost
            port : 8086
        };
        var xebraState = new Xebra.State(options);
        xebraState.connect();
        xebraState.on("channel_message_received", function(chan, msg) {
            if (chan === "toBrowser") {
                document.getElementById("fromMax").textContent = msg;
            }
        });

        </script>

</head>
<body>
    <h1>Ploom Pop-up - Spitalfields</h1>


    <div id="fromMax"></div>
    
</body>
